
<h1 class="title"><img id="logo" href="#" src="/assets/images/congo.png" alt="CONGO logo"
            class="logo responsive-img" /> </h1>

<nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="#" id="hello"></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <input type="text" id="searchText" placeholder="Search...">
      </li>
      <li class="nav-item">
        <button id="search">Search</button>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="addProduct">Add a Product</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="" id="logout">Log Out</a>
      </li>
    </ul>
  </div>
</nav>
<!--image-->
{{#each allProducts}}
<div class="container">
  <div class="row product">
    <div class="col-6">
      <h2 class="productName"> {{this.name}}</h2>
      <p class="postedBy" id="{{this.userID}}"></p>
      <img id="image" class="card-img-top img-fluid" src="{{this.imageUrl}}" alt="Picture of item" />
    </div>

    <!--sec col and bio par-->
    <div class="col-4">
      <section class="bio">
        <!-- bio Paragraph -->
        <p id="first-paragraph">{{this.description}}</p>
      </section>
    </div>
  </div>

  <!--like bottons-->
  <div class="buttons">
    <div class="row">
      
      <div class="col-4 ">
        <button id="{{this.id}}" data-like="{{this.likes}}" class="btn btn-primary like"><i class="fa fa-thumbs-up"></i>
        {{this.likes}} Likes</button>
        <button id="{{this.id}}" data-dislike="{{this.dislikes}}" class="btn btn-primary dislike"><i
          class="fa fa-thumbs-up"></i>{{this.dislikes}} Dislikes</button>
      </div>
    </div>
  </div>
</div>
{{/each}}

<script src="https://code.jquery.com/jquery.js"></script>
<script src="../public/assets/js/script.js"></script>